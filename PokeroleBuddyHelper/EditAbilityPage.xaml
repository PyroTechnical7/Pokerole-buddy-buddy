<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PokeroleBuddyHelper.EditAbilityPage">
    <StackLayout Padding="10">
        <Label Text="Edit Ability" FontSize="Large" HorizontalOptions="Center" />
        <FlexLayout AlignItems="Center" Margin="0,10">
            <Label Text="Name: "/>
            <Entry Text="{Binding AbilityName}" Placeholder="Name" />
        </FlexLayout>
        <FlexLayout AlignItems="Center" Margin="0,10">
            <Label Text="Effect: "/>
            <Entry Text="{Binding Effect}" Placeholder="Effect" />
        </FlexLayout>
        <FlexLayout AlignItems="Center" Margin="0,10">
            <Label Text="Description: "/>
            <Entry Text="{Binding description}" Placeholder="Name" />
        </FlexLayout>
        <FlexLayout AlignItems="Center" Margin="0,10">
            <Label Text="ID: "/>
            <Entry Text="{Binding Id}" Placeholder="ID" />
        </FlexLayout >
        <Button Text="Save" Clicked="OnSaveClicked" />
    </StackLayout>
</ContentPage>