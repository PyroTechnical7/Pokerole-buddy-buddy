<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PokeroleBuddyHelper.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PokeroleBuddyHelper"
    Shell.FlyoutBehavior="Disabled"
    Title="PokeroleBuddyHelper">

    <TabBar>
        <Tab Title="Pokemon">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        <Tab Title="Items">
            <ShellContent ContentTemplate="{DataTemplate local:ItemsPage}" />
        </Tab>
        <Tab Title="Abilities">
            <ShellContent ContentTemplate="{DataTemplate local:AbilitiesPage}" />
        </Tab>
        <Tab Title="Moves">
            <ShellContent ContentTemplate="{DataTemplate local:MovesPage}" />
        </Tab>
    </TabBar>

</Shell>