<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PokeroleBuddyHelper.Controls.SearchablePicker">
    <StackLayout>
        <Entry x:Name="SearchEntry" Placeholder="Search or enter move name" TextChanged="OnSearchTextChanged" Text="{Binding Name}"/>
        <ListView x:Name="SuggestionsListView" IsVisible="False" SelectionMode="Single" ItemSelected="OnItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentView>